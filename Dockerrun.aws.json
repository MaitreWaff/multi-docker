{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "waffoluc/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": "128"
        },
        {
            "name": "server",
            "image": "waffoluc/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": "128"
        },
        {
            "name": "worker",
            "image": "waffoluc/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": "128"
        },
        {
            "name": "nginx",
            "image": "waffoluc/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": "80",
                    "containerPort": "80"
                }
            ],
            "links": ["client", "server"],
            "memory": "128"
        }
    ]
}